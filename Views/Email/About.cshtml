<!-- ======= Contact Section ======= -->
<section id="contact" class="contact section-bg">
    <div class="container">

        <div class="section-title">
            <h2>Contact</h2>
            <p>Send us a message, and let's design your new site from scratch.</p>
        </div>

        <div class="row">

            <div class="col-lg-4">
                <div class="info d-flex flex-column justify-content-center">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Location:</h4>
                        <p>Cartago, Oriental<br>Costa Rica</p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>miguelestradam36@gmail.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Why ?</h4>
                        <p>Have you ever heard about monthly costs for websites ?<br/>We can help you reduce that.</p>
                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0">

                <div class="row container">
                    <div>

                        @{
                            if (ViewBag.Exception != null && ViewBag.Exception != "Email was send succesfully." && ViewBag.Exception == "")
                            {
                            <div class="alert alert-danger">@ViewBag.Exception</div>
                            }
                            if (ViewBag.Exception == "Email was send succesfully.")
                            {
                            <div class="alert alert-success">Email has been sent succesfully.</div>
                            }
                        }
                    </div>
                </div>
                <div class="row container">
                        <div class="has-error col-md-12 floating">
                            <form method="post">
                                <div class="row">
                                    <div class="form-group col-md-10">
                                        <label asp-for="Name">Name:</label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-muted"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-10">
                                        <label asp-for="Email">Email:</label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-muted"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-10">
                                        <label asp-for="Subject">Subject:</label>
                                        <input asp-for="Subject" class="form-control" />
                                        <span asp-validation-for="Subject" class="text-muted"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-10">
                                        <label asp-for="Message">Message:</label>
                                        <textarea rows="8" cols="30" asp-for="Message" class="form-control"></textarea>
                                        <span asp-validation-for="Message" class="text-muted"></span>
                                    </div>
                                </div>
                                <div class="container">
                                    <button type="submit" class="btn btn-success" id="button">Send Message</button>
                                </div>
                            </form>
                        </div>
                </div>

            </div>

        </div>

    </div>
</section><!-- End Contact Section -->